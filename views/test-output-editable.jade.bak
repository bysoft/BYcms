	#content
		#contentHeader
			h1 Dashboard
		#container
			.grid-24
				.widget.widget-plain
					.widget-content
						h2.dashboard_title Weekly Sales Stats
						.dashboard_report.first.activeState
							.pad
								span.value 786 
								Completed Sales
						.dashboard_report.defaultState
							.pad
								span.value 347
								Pending Sales
						.dashboard_report.defaultState
							.pad
								span.value 118
								Pending Sales
						.dashboard_report.defaultState
							.pad
								span.value 45
								Returned Items
				.widget.widget-tabs
					.widget-header
						span.icon-chart
						h3 Charts
						ul.tabs.right
							li.active
								a(href='#yearly') yearly
							li
								a(href='#monthly') Monthly